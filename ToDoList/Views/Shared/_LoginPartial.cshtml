@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav menu-items">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-secondary me-4 btn-menu">Logout</button>
            </form>
    </li>
}
else
{
    <li class="nav-item">
            <a button type="button" class="btn btn-secondary me-4 btn-menu" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a button type="button" class="btn btn-secondary btn-menu" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
